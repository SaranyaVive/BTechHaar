<!DOCTYPE html>
<html lang="en">
    <style>
    header {
        background-color: black;
        color: white;
        display: flex;
        align-items: center;
        justify-content:space-between;
        height: 15vh;
        box-shadow: 5px 5px 10px rgb(0,0,0,0.3);
     
    }

    .image
    {
        padding-left: 30px;
    }
    .hide
    {
        padding-right: 30px;
    }

    .submit_class {
        border-style: none;
        border-radius: 5px;
        background-color: #FFE6D4;
        padding: 8px 20px;
        font-family: 'system-ui';
        text-transform: uppercase;
        letter-spacing: .8px;
        display: block;
        margin: auto;
        margin-top: 10px;
        box-shadow: 2px 2px 5px rgb(0,0,0,0.2);
        cursor: pointer;
    }
    </style>
<head>
</head>
<body id="page-top">
<header>
    <img src="~/HaarLogo.png" class="image" style="" width="100px" />
        <div class="hide"><button class="submit_class"><a href="/Home/Authenticate" style="text-decoration:none">Log Out</a></button></div>
</header>
    @RenderBody()
</body>
<script type="text/javascript" src="//ajax.googleapis.com/ajax/libs/jquery/1.10.1/jquery.min.js"></script>
<script>
        if (!window.location.href.endsWith("Index"))
        {
        $('.hide').css("display", "none");
        }
        else
        {
        $('.hide').css("display", "show");
        }
</script>
</html>